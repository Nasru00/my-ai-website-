        function openTool(toolType) {
            alert('Ø¬Ø§Ø±ÙŠ ÙØªØ­ ' + toolType + '... (Ø³ÙŠØªÙ… ØªÙØ¹ÙŠÙ„Ù‡ Ø¨Ø¹Ø¯ Ø§Ù„ØªØ³Ø¬ÙŠÙ„)');
